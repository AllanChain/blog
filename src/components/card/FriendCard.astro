---
import { Friend } from '@data/types'

export interface Props {
  friend: Friend
}

const { friend } = Astro.props as Props
---

<div overflow-hidden border='rounded-md' shadow-md bg-white m-1 w-xs>
  <div px-4>
    <h3 my-2 py-1 text-sky-900>
      <a class='theme-link' href={friend.blog}>{friend.name}</a>
    </h3>
    <img
      src={friend.avatar}
      alt='Avatar'
      height='80'
      width='80'
      p-1
      m-2
      float-right
      rounded-full
    />
    <div text='sm gray-800'>{friend.moto}</div>
    <div clear-both></div>
  </div>
</div>
