---
import 'unocss-hmr-fix'
import 'normalize.css'
import IconedLink from '@components/IconedLink.astro'

export interface Props {
  title?: string
}

const { title } = Astro.props as Props
---

<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width' />
    <title>{title}</title>
    <link
      rel='icon'
      type='image/x-icon'
      href={`${import.meta.env.BASE_URL}/favicon.ico`}
    />
    <slot name='head'></slot>
  </head>
  <body class='px-4'>
    <div flex flex-wrap items-center justify-end py-2>
      <a href='/' flex items-center text-current decoration-none cursor-pointer>
        <img src='/avatar/37.png' width='37' height='37' rounded-full />
        <div mx-2 font-bold text-lg text-sky-900>AC Dustbin</div>
      </a>
      <div flex-1></div>
      <div>
        <IconedLink icon='i-mdi-book-open-variant' name='Posts' url='/posts/' />
        <IconedLink
          icon='i-mdi-label-multiple-outline'
          name='Labels'
          url='/labels/'
        />
        <IconedLink
          icon='i-mdi-information-outline'
          name='About'
          url='/post/about/'
        />
        <IconedLink
          icon='i-mdi-github'
          name='Me'
          url='https://github.com/AllanChain'
        />
      </div>
    </div>
    <div border='0 b-2 dotted gray-500' m='b-4 x--4'></div>
    <slot></slot>
  </body>
</html>
